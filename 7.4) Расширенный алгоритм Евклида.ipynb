   "source": [
    "function gcdex(a, b)\n",
    "    if b == 0\n",
    "        return a, 1, 0\n",
    "    end\n",
    "    gcd, x0, y0 = gcdex(b, a % b)\n",
    "    x = y0\n",
    "    y = x0 - (a ÷ b) * y0\n",
    "    return gcd, x, y\n",
    "end\n",
    "\n",
    "gcdex(49, 28)"
   ]
  }
